<div>
	<h2>アーティスト新規登録</h2>
	<%= form_for(@artist_new) do |f| %>

	<% if @artist_new.errors.any? %>
  <div id="error_explanation">
    <h3><%= @artist_new.errors.count %>件のエラーが発生しました。</h3>
    <ul>
      <% @artist_new.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

	<p>アーティスト名</p>
	<%= f.text_field :artist_name %>
	<p></p>
	<%= f.submit '追加' %>

	<% end %>
</div>

<%= link_to "商品追加", admin_user_path(current_admin.id) %>
<%= link_to "カテゴリー追加", new_category_path %>

<table>
	<thead>
		<tr>
			<th>アーティスト名</th>
			<th>編集</th>
			<th>削除</th>
		</tr>
	</thead>
	<tbody>
		<% @artist.each do |artist| %>
		<tr>
			<td><%= artist.artist_name %></td>
			<td><%= link_to "編集", edit_artist_path(artist) %></td>
			<td><%= link_to "削除", artist_path(artist), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
		</tr>
		<% end %>
	</tbody>
</table>