<div class="navbar" style="background-color:  #F3FFD8;">
  <div class="container">
    <div class="row">
      <%= render 'top/category', artists: @artists, categories: @categories, animes: @animes %>
    </div>
  </div>
</div>


<div class="bg-image2">
  <div class = "bg-mask2" >
    <div class="container" style="background-color: white;">
      <% if @productsearch.count > 0 %>
     <h3>商品検索一覧</h3>
     <div class="row">
       <% @productsearch.each do |product| %>
        <div class="col-xs-3">
          <div class="thumbnail">
          <%= link_to product_path(product.id) do %>
            <div class = "index_image" >
              <%= attachment_image_tag product, :image %>
            </div>
          <% end %>
            <div class = "product-info" >
            <ul>
              <li> 
                <%= link_to product_path(product.id) do %>
                <%= product.title %>
                <% end %>
              </li>
              <li>
                <% product.categories.each do |cate| %>
                  <%= link_to category_path(cate.id) do  %>
                  <%= cate.category_name %>
                  <% end %>
                <% end %>
              </li>
              <li>
                <%= link_to artist_path(product.artist.id) do  %>
                <%= product.artist.artist_name %>
                <% end %>
              </li>
              <li>
                ¥<%= product.price %>
              </li>
              <li>
                <% if product.stock == 0 then %>
                <p>在庫なし</p>
                <% else %>
                <p>在庫あり</p>
                <% end %>
              </li>
            </ul>
            </div>
          </div>
        </div>
        <% end %>
      </div>
      <% end %>
  <% if @artistsearch.count > 0 %>
  <h3>アーティスト検索一覧</h3>
  <div class="container">
    <div class="row">
      <% @artistsearch.each do |a| %>
        <ul>
          <li>
            <%= link_to a.artist_name, artist_path(a) %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
  <% end %>
  <% if @categorysearch.count > 0 %>
  <h3>カテゴリー検索一覧</h3>
  <div class="container">
    <div class="row">
      <% @categorysearch.each do |a| %>
        <ul>
          <li>
            <%= link_to a.category_name, category_path(a) %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
  <% end %>
  <% if @animesearch.count > 0 %>
  <h3>アニメタイトル検索一覧</h3>
  <div class="container">
    <div class="row">
      <% @animesearch.each do |a| %>
        <ul>
          <li>
            <%= link_to a.anime_name, anime_path(a) %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
  <% end %>
</div>



